{
  "compilerOptions": {

    "target": "es2016",

    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",

    "typeRoots": [
      "./src/types", "./node_modules/@types"
    ],

    "allowJs": false,                                    

    "outDir": "./dist",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
